<Page x:Class="InternationalVillage_Customer.Pages.IncidentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternationalVillage_Customer.Pages"
      
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"
      
      
      
        
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IncidentPage">

    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseDown">
                <i:InvokeCommandAction Command="{Binding ClearFocus}" CommandParameter="{Binding ElementName=ApartmentFormVM}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="55"></RowDefinition>
                <RowDefinition Height="90"></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Resources>
                    <Style x:Key="{x:Type Hyperlink}" TargetType="{x:Type Hyperlink}">
                        <Setter Property="Foreground" Value="black" />

                        <Setter Property="TextDecorations" Value="None" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#2f9cfa" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <TextBlock Foreground="Black" Margin="50,10,0,0" FontWeight="Bold" VerticalAlignment="Bottom">
                <Hyperlink NavigateUri="HomePage.xaml">BACK TO HOME</Hyperlink>
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1" VerticalAlignment="Stretch"  Margin="0,0,0,-30">
                <Image  Stretch="Fill" Width="60" Height="60" VerticalAlignment="Center" Source="/Image/sunflower.png" Margin="50,0,0,0" HorizontalAlignment="Left"     />
            </Grid>
            <TextBlock Grid.Row="2"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Left"  FontSize="25" FontWeight="Bold" Margin="50,0,0,0">
                       REPORT INCIDENTS
            </TextBlock>

            <TextBlock Grid.Row="3"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Left" Margin="50,-10,0,0" FontSize="14" >
                       We are very sorry for this inconvenience. Please fill out this form so that we can support immediately.
            </TextBlock>

            <Grid Grid.Row="4" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MaxWidth="400"
                materialDesign:HintAssist.Hint="FullName"
                Width="240"
                IsEnabled="True" Margin="50,0,0,0" HorizontalAlignment="Left" />
                <TextBlock x:Name="FullNameError" Grid.Column="0" Text="Error. Please enter again " FontSize="10" Foreground="Black" Visibility="Visible" VerticalAlignment="Bottom" Margin="50,0,0,0" />
                
                <TextBox Grid.Column="1"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MaxWidth="400"
                materialDesign:HintAssist.Hint="Number of Apartment"
                Width="240"
                IsEnabled="True" Margin="50,0,0,0" HorizontalAlignment="Left" />
                <TextBlock x:Name="NumberofApartmentError" Grid.Column="1" Text="Error. Please enter again " FontSize="10" Foreground="Black" Visibility="Visible" VerticalAlignment="Bottom" Margin="50,0,0,0" />
            </Grid>


            <Grid Grid.Row="5" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                x:Name="FilledComboBox1"
                Style="{StaticResource MaterialDesignFilledComboBox}"
                IsEnabled="True"
                materialDesign:HintAssist.Hint="Type of Incident"
                Width="240" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,0">
                    <ComboBoxItem
                  Content="In-room equipment" />
                    <ComboBoxItem
                  Content="Water/Electricity" />
                    <ComboBoxItem
                  Content="Other" />
                </ComboBox>

                <ComboBox Grid.Column="1"
                x:Name="FilledComboBox2"
                Style="{StaticResource MaterialDesignFilledComboBox}"
                IsEnabled="True"
                materialDesign:HintAssist.Hint="Level of affection"
                Width="240" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,0">
                    <ComboBoxItem
                  Content="Low" />
                    <ComboBoxItem
                  Content="Medium" />
                    <ComboBoxItem
                  Content="High" />
                </ComboBox>

            </Grid>

            <Grid Grid.Row="6" Margin="0,0,0,-15" >
                <TextBox Grid.Column="0"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                VerticalAlignment="Bottom"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MaxWidth="800"
                materialDesign:HintAssist.Hint="Description"
                Height="80"
                Width="590"
                IsEnabled="True" Margin="50,0,0,15" HorizontalAlignment="Left" />
            </Grid>
            <TextBlock x:Name="DescriptionError" Grid.Row="6" Text="Error. Please enter again " FontSize="10" Foreground="Black" Visibility="Visible" VerticalAlignment="Bottom" Margin="50,0,0,-14" />

            <Grid Grid.Row="7" Margin="0,0,0,0" VerticalAlignment="Center" >
                <Button
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            materialDesign:ButtonAssist.CornerRadius="20"
            ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
            IsEnabled="True" Margin="50,25,0,0" HorizontalAlignment="Left" Width="600" VerticalAlignment="Top">
                    <TextBlock Text="SEND" />
                </Button>

            </Grid>
        </Grid>
    </Grid>
</Page>
