<Window x:Class="InternationalVillage_Customer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternationalVillage_Customer"
        mc:Ignorable="d"
        
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:componet="clr-namespace:InternationalVillage_Customer.Component"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        
        DataContext="{StaticResource LoginVM}"
        
        x:Name="LoginWD"
        WindowStyle="None"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen"  
        Background="Transparent" AllowsTransparency="True"
        Title="LoginWindow" Height="500" Width="800" ResizeMode="NoResize">

    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding ClearFocus}" CommandParameter="{Binding ElementName=LoginWD}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Border CornerRadius="20" Background="White" Margin="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="0,20,20,0" >
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Image/loginform.jpg"/>
                </Border.Background>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding Drag}" CommandParameter="{Binding ElementName=LoginWD}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </Border>
            
            <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="0,-70,0,0.333" Width="103">
                    <materialDesign:PackIcon Kind="ExitToApp"
                                             VerticalAlignment="Center" Margin="8,5,10,0">

                    </materialDesign:PackIcon>
                    <Label Style="{StaticResource MaterialDesignLabel}"
                           Content="Exit" Margin="0,-20,45,0" HorizontalAlignment="Right">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding CloseLoginWindow}" CommandParameter="{Binding ElementName=LoginWD}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Label>
                </StackPanel>

                <materialDesign:Card Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="100">
                    <Image  Margin="0,-40,20,0"  Stretch="Fill" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Image/sunflower.png"     />
                </materialDesign:Card>

                <TextBlock Grid.Row="2"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           HorizontalAlignment="Center" Margin="0,-10,0,0" FontSize="20" FontWeight="Bold"
                           >
                 Sunflower Internation Village
                </TextBlock>

                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left" Margin="90,20,0,0">
                    <materialDesign:PackIcon 
                         Kind="AccountCircleOutline" 
                         VerticalAlignment="Center" Margin="0,5,10,0">
                    </materialDesign:PackIcon>
                    <TextBox 
                          x:Name="Username"
                          materialDesign:HintAssist.Hint="UserName" Margin="0" VerticalAlignment="Top" 
                          Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                          Width="140">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding HandleTextChanged}" CommandParameter="{Binding ElementName=Username}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="90,20,0,0" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Kind="Key"
                                             Margin="0,5,10,0"
                                             Foreground="{Binding ElementName=PasswordBox, Path=BorderBrush}" VerticalAlignment="Center">

                    </materialDesign:PackIcon>
                    <PasswordBox materialDesign:HintAssist.Hint="Password"
                                 materialDesign:HintAssist.Foreground="#2f9cfa"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2f9cfa"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 x:Name="PasswordBox"
                                 Width="140"
                                 >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PasswordChanged">
                                <i:InvokeCommandAction Command="{Binding HandlePasswordChanged}" CommandParameter="{Binding ElementName=PasswordBox}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </PasswordBox>
                </StackPanel>

                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Margin="90,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" HorizontalAlignment="Left">
                            <CheckBox Content="Remember Me" Margin="-1,0,0,0" Padding="2,2,0,0"></CheckBox>
                        </Grid>

                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <Label Style="{StaticResource MaterialDesignLabel}" Margin="0,0,-10.667,0.333" FontSize="13" FontWeight="Bold"
                                       Content="? Forgot password" HorizontalAlignment="Right" Padding="0,4,7,4" FlowDirection="RightToLeft" Width="140"
                                       Foreground="#176ec6"
                                       />
                        </Grid>
                    </Grid>


                </StackPanel>

                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Height="35"
                            Width="250"
                            Margin="87,0,0,0"
                            Content="Sign in"
                            IsEnabled="True"
                            Command="{Binding SignIn}"
                            CommandParameter="{Binding ElementName=LoginWD}" HorizontalAlignment="Left"
                            >
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="89,18,0,0" FontSize="12" FontWeight="Bold"
                                       Text="?Not registered yet" HorizontalAlignment="Right" Padding="25,4,0,4" FlowDirection="RightToLeft" Width="126"
                                       Foreground="#000000">

                            </TextBlock>
                        </Grid>

                        <Grid Grid.Column="1">
                            <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="-19,18,0,0" FontSize="12" FontWeight="Bold"
                                       Text="Creat an account" HorizontalAlignment="Left" Padding="32,4,0,4" FlowDirection="RightToLeft" Width="100"
                                       TextAlignment="Left" Foreground="#176ec6" Cursor="Hand">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding CreateAccount}" CommandParameter="{Binding ElementName=LoginWD}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </TextBlock>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        
        
    </Border>
</Window>
